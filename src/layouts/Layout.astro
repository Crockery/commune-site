<style is:global>
	*, *::before, *::after {
		box-sizing: border-box;
	}
	* {
		margin: 0;
	}
	body {
		line-height: 1.5;
		-webkit-font-smoothing: antialiased;
	}
	img, picture, video, canvas, svg {
		display: block;
		max-width: 100%;
	}
	input, button, textarea, select {
		font: inherit;
	}
	p, h1, h2, h3, h4, h5, h6 {
		overflow-wrap: break-word;
	}
	#root, #__next {
		isolation: isolate;
	}
	:root {
		--white: 255, 255, 255;
		--black: 0, 0, 0;
		--accent-light: 248, 230, 254;
		--accent: 241, 198, 255;
		--accent-dark: 191, 0, 254;
	}
	h1 {
		font-size: 80px;
		text-decoration: underline;
		font-weight: 600;
		margin: 0;
    color: rgb(var(--accent-dark))
	}
	html {
		font-family: 'Poppins', sans-serif;
		background: rgb(var(--white));
	}
	header {
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 50px 60px
	}
	nav {
		overflow: hidden;
		width: 100%;
		border-top: 2px solid rgb(var(--accent-dark));
		border-bottom: 2px solid rgb(var(--accent-dark));
		column-gap: 48px;
		display: flex;
		align-items: center;
		justify-content: flex-start;
		padding: 12px 0px;
	}
	nav a {
		white-space: nowrap;
		text-decoration: none;
		color: rgb(var(--accent-dark));
		font-weight: 500;
	}
	nav a:hover {
		text-decoration: underline;
	}
	li {
		list-style: none;
		margin: 0;
		padding: 0;
	}
</style>